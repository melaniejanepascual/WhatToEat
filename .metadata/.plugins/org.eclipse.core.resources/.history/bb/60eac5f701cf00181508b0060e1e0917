// Backend code to get reviews from a business name using Yelp dataset

import java.io.*;
import java.util.Scanner;
import org.json.simple.JSONArray; 
import org.json.simple.JSONObject; 
import org.json.simple.parser.*;

public class YelpBackend
{
    static final String BUSINESS_PATH = "../yelp_dataset/yelp_academic_dataset_business.json";
    public static void main(String[] args) throws FileNotFoundException, ParseException
    {
        Scanner scan = new Scanner(System.in);
        System.out.println("Enter the restaurant name: ");
        String restName = scan.nextLine();
        String businessId = FindBusinessId(restName);
        if (businessId == null)
        {
            System.out.println("Sorry, but we do not have any data on " + restName);
            System.out.println("Please try a different restaurant, or add your own review.");
            scan.close();
            return;
        }
        scan.close();
    }

    public static String FindBusinessId(String restName) throws FileNotFoundException, ParseException
    {
        File business = new File(BUSINESS_PATH);
        Scanner fileReader = new Scanner(business);
        String businessId = null;
        while (fileReader.hasNextLine())
        {
            String line = fileReader.nextLine();
            Object obj = new JSONParser().parse(line);
            JSONObject business = (JSONObject) obj;
            String businessId = (String) business.get("name");

        }
        fileReader.close();

        return businessId;
    }
}